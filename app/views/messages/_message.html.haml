.chat-main__massage{data: {message: {id: message.id}}}
  .chat-main__message-list__text1{data: {message: {id: message.id}}}
    .chat-main__message-list__text1_name{data: {message: {id: message.id}}}
      = message.user.name
    .chat-main__message-list__text1__date{data: {message: {id: message.id}}}
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__text2{data: {message: {id: message.id}}}
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__image' if message.image.present?