.chat-main
  .chat-main__group
    .chat-main__group-info
      .chat-main__group-info__text1
        = @group.name
      .chat-main__group-info__text2
        Member :
        - @group.users.each do |user|
          = user.name

    .chat-main__group-info
      = link_to "Edit", edit_group_path(params[:group_id]), class: "chat-main__group-info__edit-btn"

  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: "chat-main__message-form__text", placeholder: 'type a message' 
      .chat-main__message-form__icon
        = f.label :image, class: "chat-main__message-form__icon--img" do
          = icon('fas', 'image')
          = f.file_field :image, class: 'icon'
      = f.submit "Send", class: "chat-main__message-form__send-btn"