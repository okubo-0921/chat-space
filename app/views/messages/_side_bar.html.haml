.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        = link_to new_group_path, class: "top-items__icon--edit" do
          = icon('far', 'edit')
          %spcn<>
        = link_to edit_user_path(current_user), class: "top-items__icon--cog" do
          = icon('fas', 'cog')
          %spcn<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__number
        = link_to '#' do
          .side-bar__group-list__number__text1
            = group.name
